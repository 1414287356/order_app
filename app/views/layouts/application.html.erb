<!DOCTYPE html>
<html>
  <head>
    <title>OrderApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav-left">
            <%= link_to image_tag("IMG_0555.jpg", class: :logo), root_path %>
          </div>
          <div class="nav-right">
          <% if user_signed_in? %>
            <%= link_to "#{current_user.nickname}さん", new_user_session_path , class: :nav_btn %>
            <%= link_to "ログアウト", destroy_user_session_path, class: :nav_btn, method: :delete %>
          <% else %>
            <%= link_to "ログイン", new_user_session_path , class: :nav_btn %>
            <%= link_to "新規登録", new_user_registration_path, class: :nav_btn %>
          <% end %>
          </div>
        </div>
      </div>
    </header>
      <%= yield %>
    <footer class="text-muted py-5 bg-danger">
      <div class="container text-dark">
        <p class="mb-1 text-center lead">©️ Trattoria Salice by Yanagi Group</p>
      </div>
    </footer>
  </body>
</html>
