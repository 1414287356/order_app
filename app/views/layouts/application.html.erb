<!DOCTYPE html>
<html>
  <head>
    <title>OrderApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav-left">
            <%= link_to image_tag("IMG_0555.jpg", class: :logo), root_path %>
          </div>
          <div class="nav-right">
          <% if user_signed_in? %>
            <%= link_to "#{current_user.nickname}さん", new_user_session_path , class: :nav_btn %>
            <%= link_to "ログアウト", destroy_user_session_path, class: :nav_btn, method: :delete %>
          <% else %>
            <%= link_to "ログイン", new_user_session_path , class: :nav_btn %>
            <%= link_to "新規登録", new_user_registration_path, class: :nav_btn %>
          <% end %>
          </div>
        </div>
      </div>
    </header>
      <%= yield %>
    <footer>
      <p class="copyright">Copyright © TRATTORIA SALICE in YANAGI GROUP All rights reserved.</p>
    </footer>
  </body>
</html>
